{{#each planets}}
<div class="planet-card" id="planet1">
    <img src="{{this.imageUrl}}">
    <h3>{{this.name}}</h3>
    <p>Solar System: {{this.solarSystem}}</p>
    <a class='detail-btn' href='/planets/{{this._id}}/details'>Details</a>
</div>
{{else}}
<!-- Repeat the block for more planets -->
<p class="no-post">There are no planets found yet!</p>
{{/each}}